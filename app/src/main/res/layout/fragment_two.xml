<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bDd4b7"
    tools:context=".TwoFragment" >

    <LinearLayout
        android:id="@+id/linearlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#aDd4b7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/frag1_t"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/hoon"
            android:text="일병"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="부대에서 온갖 잡일을 하게되는 계급"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="기계로 치면 드론이라고 볼 수 있음"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="위로는 상병과 병장의 잔심부름을 함"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="아래로는 어리버리한 이등병의 교육을 맡고 있음"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="한 마디로 일병은 일하는 병사라서 일병이라고 생각함"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="그래도 휴대전화 사용이 자유로움"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="일과가 끝나면 애인과 연락할 수 있음"
            android:textColor="#000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/frag1_t9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/hoon"
            android:text="동기들이 서서히 애인이랑 헤어지기 시작함"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

</FrameLayout>